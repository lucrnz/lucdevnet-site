---
import { siteTitle, siteDescription, authorName, authorProfilePicAlt } from "~/consts";
import profilePicture from "~/assets/profile_picture.png";
import BaseLayout from "~/layouts/BaseLayout.astro";

import { Picture } from "astro:assets";

---

<BaseLayout title={siteTitle} description={siteDescription}>
  <div class="w-full flex flex-col gap-2 items-center ml:gap-4 ml:flex-row mb-4">
    <div>
      <Picture
        src={profilePicture}
        formats={["webp", "avif"]}
        class="aspect-square rounded-full w-[100px] sm:w-[150px] md:w-[200px] border-emerald-600 border-2 bg-gray-400"
        alt={authorProfilePicAlt}
      />
    </div>
    <div class="flex flex-col gap-1 items-center ml:items-start">
      <h1 class="font-display text-2xl sm:text-3xl lg:text-4xl">{authorName.join(" ")}</h1>
      <h2 class="font-display text-3xl sm:text-6xl lg:text-7xl font-medium bg-gradient-to-r from-sky-600 to-emerald-800 dark:from-sky-400 dark:to-emerald-600 text-transparent bg-clip-text pb-1" data-type-values="Web developer,Entrepreneur">
        <span data-type-content>Web developer</span>
      </h2>
    </div>
  </div>
  <article>
    <p class="mb-4">
      Welcome to my personal website!
    </p>
    <ul class="flex flex-col gap-2 max-w-min">
      <li>
        <a href="https://x.com/lucrnz" target="_blank" class="flex flex-row items-center gap-2">
