---
export interface Props {
  paragraphs: string[];
}

const { paragraphs } = Astro.props;
---

<div class="summary-card">
  {paragraphs.map((contents) => <p>{contents}</p>)}
</div>

<style lang="scss">
  @use "~/styles/resume-common.scss" as *;

  .summary-card {
    @include resume-card-config;
    justify-content: unset;

    @media screen {
      & > p {
        padding: 20px;
      }
    }

    @media print {
      margin-left: 0.5rem;
    }
  }
</style>
