<style lang="scss">
  @use "../styles/common.scss" as *;

  .resume-header {
    @include name-and-avatar-layout;

    & .left-side > .avatar {
      border-radius: 50%;
      width: 120px;
    }

    & .right-side {
      gap: 0;
      justify-content: unset;

      & > .links {
        display: flex;
        flex-direction: row;
        gap: 10px;
      }
    }

    @media screen and (max-width: $tablet-breakpoint) {
      justify-content: center;

      & .right-side {
        gap: 5px;
        align-items: center;
      }
    }
  }

  @mixin resume-card-config {
    @include card-base(
      $margin: 30px 20px 30px 20px,
      $margin-print: 10px,
      $padding: 5px,
      $padding-laptop: 10px
    );
    align-items: center;
    justify-content: space-around;
  }

  article.resume {
    & > section:not(:first-child) {
      margin-top: 20px;
    }

    .resume-section-title {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;

      @media screen and (min-width: $laptop-breakpoint) {
        align-items: flex-start;
      }

      @media print {
        align-items: flex-start;
      }
    }

    .resume-card {
      @include resume-card-config;

      @media screen and (min-width: $laptop-breakpoint) {
        flex-direction: row;
      }

      & > .left-side,
      & > .right-side {
        display: flex;
        flex-direction: column;
        width: unset;
        padding: 5px;

        @media screen and (min-width: $tablet-breakpoint) {
          padding: 20px;
          width: 50%;
        }
      }
    }

    #summary > .resume-summary-card {
      @include resume-card-config;
      justify-content: unset;

      @media screen {
        & > p {
          padding: 20px;
        }
      }
    }

    div[role="list"] {
      display: flex;
      flex-direction: column;

      & > [role="listitem"] {
        @media print {
          &::before {
            content: "🗸";
            margin-right: 10px;
          }
        }
      }
    }

    #education > .education-certificate {
      & > .left-side {
        & > .cert-info {
          display: flex;
          flex-direction: column;
          margin-bottom: 10px;
        }
      }

      & > .right-side {
        & > .skills {
          display: flex;
          flex-direction: row;
          gap: 10px;
        }
      }
    }

    #experience > .experience-job {
      & > .left-side {
        & > .job-info {
          display: flex;
          flex-direction: column;
          margin-bottom: 10px;
        }
      }

      & > .right-side {
        & > .job-bullet-points {
          display: flex;
          flex-direction: row;
          gap: 10px;
        }
      }
    }
  }
</style>
