import type { CollectionEntry } from "astro:content";

type BlogPost = CollectionEntry<"blog">["data"];

import {
  formatDateTime,
  DateTimeFormattingConfig
} from "~/helpers/formatDateTime";

export type Props = Pick<BlogPost, "title" | "summary" | "datePublished"> & {
  slug: string;
};

const { title, summary, datePublished, slug } = Astro.props;
---

<li class="max-w-max flex flex-col gap-2">
  <span class="max-w-fit">
    <svg
      aria-label="Calendar icon"
      class="opacity-75 inline-block print:hidden"
      xmlns="http://www.w3.org/2000/svg"
      width="22"
      height="22"
      viewBox="0 0 24 24"
    >
      <path
        fill="currentColor"
        d="M12 12h5v5h-5zm7-9h-1V1h-2v2H8V1H6v2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2m0 2v2H5V5zM5 19V9h14v10z"
      ></path>
    </svg>
    <span
      >{
        formatDateTime(
          datePublished,
          DateTimeFormattingConfig.DayShortMonthYear
        )
      }</span
    >
  </span>
  <a href={`/blog/${slug}/`} class="mb-2 max-w-fit">
    <h2
      class="text-2xl underline font-medium hover:text-cyan-600 hover:dark:text-cyan-400"
    >
      {title}
    </h2>
  </a>
  {summary.length > 0 && <p>{summary}</p>}
</li>
