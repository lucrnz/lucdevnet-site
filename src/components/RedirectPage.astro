import Body from "~/components/Body.astro";
import Head from "~/components/Head.astro";
export type Props = {
  targetUrl: string;
};

const { targetUrl } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head slot="head" title="Redirecting" />
    <meta http-equiv="refresh" content=`1; url=${targetUrl}` />
    <style>
      .spinner-svg {
        transform-origin: center;
        animation: spinner-animation 1s infinite linear;
      }
      @keyframes spinner-animation {
        100% {
          transform: rotate(360deg);
        }
      }
    </style>
  </head>
  <Body>
    <div class="flex flex-col items-center justify-center h-full p-4 gap-4">
      <h1 class="text-3xl font-semibold font-display">Please Wait</h1>
      <div class="flex items-center justify-center">
        <svg
          width="128"
          height="128"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M12,1A11,11,0,1,0,23,12,11,11,0,0,0,12,1Zm0,19a8,8,0,1,1,8-8A8,8,0,0,1,12,20Z"
            opacity=".25"
            fill="currentColor"
            class="text-neutral-600 dark:text-neutral-400"></path>
          <path
            d="M10.14,1.16a11,11,0,0,0-9,8.92A1.59,1.59,0,0,0,2.46,12,1.52,1.52,0,0,0,4.11,10.7a8,8,0,0,1,6.66-6.61A1.42,1.42,0,0,0,12,2.69h0A1.57,1.57,0,0,0,10.14,1.16Z"
            fill="currentColor"
            class="spinner-svg text-theme-1 dark:text-theme-4"></path>
        </svg>
      </div>
      <p>
        Redirecting to <a
          href={targetUrl}
          class="underline hover:text-cyan-600 hover:dark:text-cyan-400"
          >{targetUrl === "/" ? "Home page" : targetUrl}</a
        >...
      </p>
    </div>
  </Body>
</html>
