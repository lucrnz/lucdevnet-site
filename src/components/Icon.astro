---
import { Icon as AstroIcon } from "astro-icon";

export interface Props {
  name: string;
  width?: string;
  alt?: string;
}

const { name, width: providedWidth, alt } = Astro.props;

const width =
  providedWidth && providedWidth.length > 0 ? providedWidth : "22px";
---

<AstroIcon name={name} style={`--width: ${width}`} aria-label={alt ?? "Icon"} />

<style lang="scss">
  @media screen {
    svg {
      width: var(--width);
    }
  }

  @media print {
    svg {
      display: none;
    }
  }
</style>
