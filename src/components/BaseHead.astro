---
// Fonts
import "@fontsource-variable/cabin";
import "@fontsource-variable/exo-2";

import { ViewTransitions } from "astro:transitions";
import { siteTitle, xUserName } from "~/consts";

export interface Props {
  title: string;
  description: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const title: string =
  Astro.props["title"] === siteTitle
    ? siteTitle
    : `${Astro.props["title"]} - Lucdev`;
const description: string = Astro.props["description"];

// @TODO: Compress share icon / favicon / all images to Webp.
// @TODO: Favicon is not correct, need to create a new one!!

const isDev = import.meta.env.DEV;
const baseUrl = isDev ? new URL(Astro.url.origin) : Astro.site ? new URL(Astro.site) : new URL(Astro.url.origin);

const favIcon = new URL("/favicon.svg", baseUrl);
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, interactive-widget=resizes-content" />
<title>{title}</title>
<link rel="icon" type="image/svg+xml" href={favIcon} />
<link rel="sitemap" href="/sitemap-index.xml" />
<meta name="generator" content={Astro.generator} />

<link rel="alternate" type="application/rss+xml" title={siteTitle} href="/rss.xml" />

<link rel="canonical" href={canonicalURL} />
<meta name="description" content={description} />
<meta name="name" content={title} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:description" content={description} />
<meta property="og:image" content="/android-chrome-192x192.png" />
<meta property="og:type" content="website" />
<meta property="og:site_name" content={title} />
<meta property="og:title" content={title} />

<meta name="twitter:card" content="summary" />
<meta name="twitter:site" content={`@${xUserName}`} />
<meta name="twitter:creator" content={`@${xUserName}`} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta name="twitter:image" content="/android-chrome-192x192.png" />

<ViewTransitions fallback="animate" />
