---
import {
  authorName,
  authorEmail,
  authorProfilePicture,
  authorProfilePictureAlt,
  authorSocialMedia
} from "~/consts";

const linkedInUrl = authorSocialMedia.find((x) => x.includes("linkedin.com/"))!;
---

<div class="flex flex-row gap-2 sm:gap-4 mb-4">
  <img
    decoding="async"
    loading="lazy"
    src={authorProfilePicture}
    class="aspect-square rounded-full w-[100px] border-emerald-600 border-2"
    alt={authorProfilePictureAlt}
    class="rounded-full aspect-square w-28"
  />
  <div class="flex flex-col gap-1">
    <h1
      class="text-3xl font-medium font-display print:font-serif print:font-bold"
    >
      {authorName.join(" ")}
    </h1>
    <div class="flex flex-col gap-1 ml-[2px]">
      <span>Full-Stack Web Developer</span>
      <ul class="flex flex-row gap-2 items-center md:max-h-8 print:hidden">
        <li>
          <a
            href={linkedInUrl}
            target="_blank"
            class="flex flex-row items-center gap-1 pi"
          >
            <svg
              aria-label="Linkedin Logo"
              xmlns="http://www.w3.org/2000/svg"
              width="22"
              height="22"
              viewBox="0 0 24 24"
              ><path
                fill="currentColor"
                d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2zm-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93zM6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37z"
              ></path></svg
            >
            <span class="underline hover:text-cyan-600 hover:dark:text-cyan-400"
              >LinkedIn</span
            >
          </a>
        </li>
        <li>
          <a
            href={`mailto:${authorEmail}`}
            target="_blank"
            class="flex flex-row items-center gap-1"
          >
            <svg
              aria-label="Email icon"
              xmlns="http://www.w3.org/2000/svg"
              width="22"
              height="22"
              viewBox="0 0 24 24"
              ><path
                fill="currentColor"
                d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2m0 4l-8 5l-8-5V6l8 5l8-5z"
              ></path></svg
            >
            <span class="underline hover:text-cyan-600 hover:dark:text-cyan-400"
              >Email</span
            >
          </a>
        </li>
      </ul>
      <ul
        class="hidden print:flex print:flex-row gap-2 items-center md:max-h-8"
      >
        <li>
          <span>LinkedIn:</span>
          <a href={linkedInUrl} target="_blank" class="underline text-sky-700"
            >{linkedInUrl}</a
          >
        </li>
        <li>
          <span>Email:</span>
          <a
            href={`mailto:${authorEmail}`}
            target="_blank"
            class="underline text-sky-700">{authorEmail}</a
          >
        </li>
      </ul>
    </div>
  </div>
</div>
