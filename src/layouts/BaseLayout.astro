---
import { LicenseName, DEFAULT_LICENSE } from "../consts";

export interface Props {
  title: string;
  description: string;
  license?: LicenseName;
}

const { title, description, license: providedLicense } = Astro.props;

let license = DEFAULT_LICENSE;

if (providedLicense) {
  license = providedLicense;
}

import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <slot name="head" />
  </head>
  <body>
    <noscript>
      <blockquote>
        Due to bots and other unwanted traffic, I have to protect my contact
        information using JavaScript. Some parts of this website may not work.
        However, to read articles it should be fine.
      </blockquote>
    </noscript>
    <Header />
    <main>
      <slot />
    </main>
    <Footer license={license} />
  </body>
</html>
