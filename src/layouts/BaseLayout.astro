---
import BaseHead from "~/components/BaseHead.astro";
import Footer from "~/components/Footer.astro";
import Header from "~/components/Header.astro";

export interface Props {
  title: string;
  description: string;
  heroImg?: {
    src: string;
    alt: string;
  };
}

const { title, description, heroImg } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} heroImg={heroImg} />
    <style is:global>
      html {
        width: min(100vw, 100%);
      }
    </style>
    <slot name="head" />
  </head>
  <body class="relative font-body tracking-wider p-4 sm:m-auto sm:max-w-[80ch] lg:max-w-[100ch] bg-gray-100 text-neutral-800 dark:bg-zinc-800 dark:text-neutral-300 print:m-2 print:max-w-[unset] print:bg-[unset] print:text-[unset] print:font-serif print:leading-relaxed print:tracking-wide">
    <Header />
    <main class="mb-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
