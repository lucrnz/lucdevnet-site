---
import { LicenseName, DEFAULT_LICENSE } from "../consts";

export interface Props {
  title: string;
  description: string;
  license?: LicenseName;
  hideFun?: boolean;
}

const { title, description, license: providedLicense, hideFun } = Astro.props;

let license = DEFAULT_LICENSE;

if (providedLicense) {
  license = providedLicense;
}

import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <slot name="head" />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer license={license} hideFun={hideFun} />
  </body>
</html>
