import {
  authorSocialMedia,
  authorDescription,
  authorName,
  authorProfilePicture,
  authorProfilePictureAlt
} from "~/consts";
---

<div class="w-full flex flex-col gap-2 items-center ml:gap-4 ml:flex-row mb-4">
  <div>
    <img
      decoding="async"
      loading="lazy"
      src={authorProfilePicture}
      alt={authorProfilePictureAlt}
      class="aspect-square rounded-full w-[100px] sm:w-[150px] md:w-[200px] border-orange-500 border-2 bg-gray-400"
    />
  </div>
  <div class="flex flex-col gap-1 items-center ml:items-start">
    <h1 class="font-display text-2xl sm:text-3xl lg:text-4xl ml-[2px]">
      {authorName.join(" ")}
    </h1>
    <h2
      class="font-display text-3xl sm:text-6xl lg:text-7xl font-medium bg-gradient-to-r from-amber-500 to-orange-800 dark:from-yellow-400 dark:to-orange-500 text-transparent bg-clip-text pb-1"
    >
      <span>Web developer</span>
    </h2>
  </div>
</div>
<article>
  <h3 class="font-display text-xl font-medium mb-4">
    Welcome to my personal website!
  </h3>
  <section class="flex flex-col gap-2 mb-4">
    {authorDescription.map((val) => <p class="max-w-fit">{val}</p>)}
    <details>
      <summary
        class="cursor-pointer hover:text-cyan-600 hover:dark:text-cyan-400 max-w-fit"
        >Learn more about me</summary
      >
      <div
        class="prose dark:prose-invert max-w-[unset] pt-2 prose-headings:font-medium prose-headings:font-display"
      >
